{
  "version": 2,
  "builds": [
    {
      "src": "src/back.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/src/back.py"
    },
    {
      "src": "/(.*)",
      "dest": "/src/back.py"
    }
  ],
  "env": {
    "VIRTUAL_ENV": "/vercel/venv"
  },
  "post-build": "bash build.sh"
}
